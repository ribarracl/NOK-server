<ol class="breadcrumb">
	<li><%= link_to 'Stores', workspace_stores_path %></li>
	<li><a href="<%= workspace_store_path(Base64.urlsafe_encode64 @store.id.to_s) %>"><%= @store.name %></a></li>
	<li class="active">Ads</li>
</ol>

<%= form_for :ad, url: workspace_store_ads_path(Base64.urlsafe_encode64 @store.id.to_s), :html => { :class => 'form-horizontal' } do |form| %>

	<fieldset>
		<div class="form-group">
			<%= form.label :name, 'Nombre', :class => 'col-lg-2 control-label' %>
			<div class="col-lg-10">
				<%= form.text_field :name, :class => 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= form.label :description, 'Descripción', :class => 'col-lg-2 control-label' %>
			<div class="col-lg-10">
				<%= form.text_area :description, :class => 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= form.label :expires, 'Fecha expiración', :class => 'col-lg-2 control-label' %>
			<div class="col-lg-10">
				<%= form.text_field :expires %>
	      	</div>
	    </div>
		<div class="form-group">
			<%= form.label :image, 'Imagen', :class => 'col-lg-2 control-label' %>
			<div class="col-lg-10">
				<%= form.file_field :image %>
	      	</div>
	    </div>
	    <div class="form-group">
      		<div class="col-lg-10 col-lg-offset-2">
        		<button class="btn btn-default">Cancelar</button>
        		<button type="submit" class="btn btn-primary">Crear</button>
      		</div>
    	</div>
	</fieldset>
	
<% end %>

<script type="text/javascript">
	$(document).ready(function()
	{
		$('input[name="ad[expires]"]').datepicker();
		$('input[name="ad[expires]"]').datepicker( "option", "dateFormat", "dd/mm/yy" );
	});
</script>